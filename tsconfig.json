{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "jsx": "react",
    "allowJs": false,
    "sourceMap": true,
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "/dist",
    "paths": {
      "@src/*": ["./src/*"],
    }
  },
  "compileOnSave": false,
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./tests/**/*.ts", "./*.ts"],
  "exclude": ["node_modules"]
}
